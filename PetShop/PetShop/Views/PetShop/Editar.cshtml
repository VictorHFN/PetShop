@model PetShopModel
@{
    ViewData["title"] = "Editar PetShop";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Editar PetShop</h1>
    </div>
    <form method="post" asp-controller="PetShop" asp-action="Editar">
        <input type="hidden" asp-for="Id">

        <div class="form-group">
            <label for="Nome" class="text-light">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome do loja . . .">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label for="CNPJ" class="text-light">CNPJ</label>
            <input type="text" class="form-control" asp-for="CNPJ" id="CNPJ" placeholder="CNPJ do loja . . .">
            <span class="text-danger" asp-validation-for="CNPJ"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Editar</button>
            <a class="btn btn-primary w-50" asp-controller="PetShop" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
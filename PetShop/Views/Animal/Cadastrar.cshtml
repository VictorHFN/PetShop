@model AnimalModel
@{
    ViewData["Title"] = "Cadastro de Animal";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Animal</h1>
    </div>

    <form asp-action="Cadastrar" method="post">
        <div class="form-group">
            <label asp-for="Nome" class="text-light"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Raca" class="text-light"></label>
            <input asp-for="Raca" class="form-control" />
            <span asp-validation-for="Raca" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Porte" class="text-light"></label>
            <input asp-for="Porte" class="form-control" />
            <span asp-validation-for="Porte" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>

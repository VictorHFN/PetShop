@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<AnimalModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Animais</h1>
        <a class="btn btn-success mx-2" asp-controller="Animal" asp-action="Cadastrar">Cadastrar Animal</a>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Raca</th>
                <th scope="col">Porte</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var animal in Model)
                {
                    <tr>
                        <th scope="row">@animal.Id</th>
                        <td>@animal.Nome</td>
                        <td>@animal.Raca</td>
                        <td>@animal.Porte</td>
                        <td>
                            <a asp-controller="Animal" asp-action="Editar" asp-route-id="@animal.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Animal" asp-action="Excluir" asp-route-id="@animal.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
          
        </tbody>
    </table>
</div>

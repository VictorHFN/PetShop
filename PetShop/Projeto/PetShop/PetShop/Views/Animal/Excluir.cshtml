@model AnimalModel
@{
    ViewData["title"] = "Excluir Animal";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Animal</h1>
    </div>
    <form method="post" asp-controller="Animal" asp-action="Excluir">
        <input type="hidden" asp-for="Id">

        <div class="form-group">
            <label for="Nome" class="text-light">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome do animal . . .">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label for="Raca" class="text-light">Raça</label>
            <input type="text" class="form-control" asp-for="Raca" id="Raca" placeholder="Raça do animal . . .">
            <span class="text-danger" asp-validation-for="Raca"></span>
        </div>
        <div class="form-group">
            <label for="Porte" class="text-light">Porte</label>
            <input type="text" class="form-control" asp-for="Porte" id="Porte" placeholder="Espécie do animal . . .">
            <span class="text-danger" asp-validation-for="Porte"></span>
        </div>
        <div class="form-group">
            <label for="ClienteId" class="text-light">Tutor</label>
            <select asp-for="ClienteId" class="form-control" id="ClienteId">
                <option value="">Selecione uma loja</option>
                @foreach (var cliente in ViewBag.Clientes)
                {
                    <option value="@cliente.Id">@cliente.Nome</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="ClienteId"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Animal" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
@model IEnumerable<AnimalModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Animais</h1>
        <a class="btn btn-success mx-2" asp-controller="Animal" asp-action="Cadastrar">Cadastrar Animal</a>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Raça</th>
                <th scope="col">Porte</th>
                <th scope="col">Tutor</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var animal in Model)
                {
                    <tr>
                        <th scope="row">@animal.Id</th>
                        <td scope="row">@animal.Nome</td>
                        <td scope="row">@animal.Raca</td>
                        <td scope="row">@animal.Porte</td>
                        <td scope="row">@animal.Cliente.Nome</td>
                        <td>
                            <a class="btn btn-warning mx-2"  asp-controller="Animal" asp-action="Editar" asp-route-id="@animal.Id">Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Animal" asp-action="Excluir" asp-route-id="@animal.Id">Excluir</a>
                        </td>
                    </tr>
                }
            } else
            {
                <tr>
                    <td>
                        <strong>
                            Nenhum animal cadastrador!
                        </strong>
                    </td>
                </tr>
            } 
        </tbody>
    </table>
</div>

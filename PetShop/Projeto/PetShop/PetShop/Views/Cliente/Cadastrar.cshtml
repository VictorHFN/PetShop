@model ClienteModel
@{
    ViewData["title"] = "Cadastrar Cliente";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastrar Cliente</h1>
    </div>
    <form method="post" asp-controller="Cliente" asp-action="Cadastrar">
        <div class="form-group">
            <label for="Nome" class="text-light">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome do cliente . . .">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Cadastrar</button>
            <a class="btn btn-primary w-50" asp-controller="Cliente" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
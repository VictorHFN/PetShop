@model ServicoModel
@{
    ViewData["title"] = "Excluir Servico";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Servico</h1>
    </div>
    <form method="post" asp-controller="Servico" asp-action="Excluir">
        <input type="hidden" asp-for="Id">

        <div class="form-group">
            <label for="Nome" class="text-light">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome do serviço . . .">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label for="Descricao" class="text-light">Descrição</label>
            <input type="text" class="form-control" asp-for="Descricao" id="Descricao" placeholder="Descrição do serviço . . .">
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>
        <div class="form-group">
            <label for="PetShopId" class="text-light">Tutor</label>
            <select asp-for="PetShopId" class="form-control" id="PetShopId">
                <option value="">Selecione uma loja</option>
                @foreach (var petshop in ViewBag.PetShops)
                {
                    <option value="@petshop.Id">@petshop.Nome</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="PetShopId"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Servico" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
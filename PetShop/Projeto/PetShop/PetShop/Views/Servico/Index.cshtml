@model IEnumerable<ServicoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Animais</h1>
        <a class="btn btn-success mx-2" asp-controller="Servico" asp-action="Cadastrar">Cadastrar Servico</a>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Loja</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var servico in Model)
                {
                    <tr>
                        <th scope="row">@servico.Id</th>
                        <td scope="row">@servico.Nome</td>
                        <td scope="row">@servico.Descricao</td>
                        <td scope="row">@servico.PetShop.Nome</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-controller="Servico" asp-action="Editar" asp-route-id="@servico.Id">Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Servico" asp-action="Excluir" asp-route-id="@servico.Id">Excluir</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        <strong>
                            Nenhum servico cadastrador!
                        </strong>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
